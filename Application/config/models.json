{
  "models": {
    "User": {
      "collection": "users",
      "authenticatable": true,
      "authStrategy": "password",
      "credentials": [
        "email",
        "password"
      ],
      "aclRoleField": "role",
      "primaryKey": "_id",
      "fields": {
        "_id": {
          "label": "ID",
          "type": "string",
          "disabled": true,
          "required": false
        },
        "name": {
          "label": "Name",
          "type": "string",
          "required": true,
          "validation": [
            "string"
          ]
        },
        "email": {
          "label": "Email",
          "type": "string",
          "required": true,
          "validation": [
            "string",
            "email",
            "unique"
          ]
        },
        "password": {
          "label": "Password",
          "type": "password",
          "required": true,
          "validation": [
            "string"
          ]
        },
        "newPassword": {
          "label": "New Password",
          "type": "password",
          "required": false,
          "validation": [
            "string"
          ]
        },
        "repeatNewPassword": {
          "label": "Repeat New Password",
          "type": "password",
          "required": false,
          "validation": [
            "string"
          ]
        },
        "role": {
          "label": "Role",
          "type": "string",
          "required": false,
          "validation": [
            "string"
          ]
        },
        "token": {
          "label": "Token",
          "type": "string",
          "disabled": true,
          "required": false
        },
        "active": {
          "label": "Is Active",
          "type": "boolean",
          "required": false,
          "validation": [
            "boolean"
          ]
        },
        "passwordForgot": {
          "label": "Password Forgot",
          "type": "boolean",
          "required": false
        },
        "passwordResetToken": {
          "label": "Password Reset Token",
          "type": "string",
          "required": false
        },
        "passwordResetTime": {
          "label": "Password Reset Time",
          "type": "integer",
          "required": false
        },
        "customField": {
          "label": "Custom options field",
          "type": "array",
          "options": {
            "option1": "Option 1",
            "option2": "Option 2"
          },
          "required": false
        }
      }
    }
  }
}
