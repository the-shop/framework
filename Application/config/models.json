{
  "models": {
    "User": {
      "collection": "users",
      "authenticatable": true,
      "authStrategy": "password",
      "credentials": [
        "email",
        "password"
      ],
      "aclRoleField": "role",
      "primaryKey": "_id",
      "fields": {
        "_id": {
          "label": "ID",
          "type": "string",
          "disabled": true
        },
        "name": {
          "label": "Name",
          "type": "string"
        },
        "email": {
          "label": "Email",
          "type": "string"
        },
        "password": {
          "label": "Password",
          "type": "password"
        },
        "newPassword": {
          "label": "New Password",
          "type": "password"
        },
        "repeatNewPassword": {
          "label": "Repeat New Password",
          "type": "password"
        },
        "role": {
          "label": "Role",
          "type": "string"
        },
        "token": {
          "label": "Token",
          "type": "string",
          "disabled": true
        },
        "active": {
          "label": "Is Active",
          "type": "boolean"
        },
        "customField": {
          "label": "Custom options field",
          "type": "array",
          "options": {
            "option1": "Option 1",
            "option2": "Option 2"
          }
        }
      }
    }
  }
}
