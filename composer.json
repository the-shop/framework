{
  "require": {
    "php": "^7.0",
    "symfony/dotenv": "3.3.6",
    "mongodb/mongodb": "1.1.2",
    "nikic/fast-route": "1.2",
    "sentry/sentry": "1.7.1",
    "mustache/mustache": "^2.12"
  },
  "autoload": {
    "psr-4": {
      "Framework\\RestApi\\": "Modules/RestApi/src",
      "Framework\\RestApiTest\\": "Modules/RestApi/test",
      "Framework\\Base\\": "Modules/Base/src",
      "Framework\\BaseTest\\": "Modules/Base/test",
      "Framework\\Http\\": "Modules/Http/src",
      "Framework\\HttpTest\\": "Modules/Http/test",
      "Application\\": "Application/src",
      "ApplicationTest\\": "Application/test"
    }
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.0",
    "phpunit/phpunit": "^6.3"
  },
  "scripts": {
    "post-install-cmd": [
      "bash bin/setup.sh"
    ]
  }
}
